---
import f1 from '../assets/f1.png';
import f2 from '../assets/f2.png';
import f3 from '../assets/f3.png';
import f4 from '../assets/f4.png';
---

<footer class="footer">
    <div class="footer__icons">
        <a href="https://github.com/eddarv" target="_blank" rel="noopener noreferrer">
            <img src={f1.src} alt="GitHub" class="footer__icon" />
        </a>
        <a href="https://t.me/Eddarv" target="_blank" rel="noopener noreferrer">
            <img src={f2.src} alt="Telegram" class="footer__icon" />
        </a>
        <a href="mailto:edward.ramirez.developer@gmail.com" target="_blank" rel="noopener noreferrer">
            <img src={f3.src} alt="Email" class="footer__icon" />
        </a>
        <a href="https://www.linkedin.com/in/edward-ramirez-294224161/" target="_blank" rel="noopener noreferrer">
            <img src={f4.src} alt="LinkedIn" class="footer__icon" />
        </a>
    </div>
</footer>

<style>
    .footer {
        background: linear-gradient(to bottom, #e640f200 0%, #ba40f24e 25%,#8a40f289 50%, #6913f2cd 75%, #4b13f2 100%);
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        box-sizing: border-box;

    }

    .footer__icons {
        display: flex;
        gap: 60px;
    }

    .footer__icon {
        height: 40px;
        filter: brightness(0.7);
        transition: all 0.3s ease;
    }

    .footer__icon:hover {
        filter: brightness(1);
        opacity: 1;
        transform: scale(1.2);
        
    }
</style>
