---
import logo from '../assets/logo.svg';
---
<header class="header">
  <div class="header__logo-container">
    <img src={logo.src} alt="Logo" class="header__logo" />
  </div>
  <nav class="header__nav">
    <a href="#hero" class="header__nav-item">Home</a>
    <a href="#about" class="header__nav-item">About me</a>
    <a href="#designs" class="header__nav-item">Designs</a>
    <a href="#development" class="header__nav-item">Development</a>
    <a href="#contact" class="header__nav-item header__nav-item--contact">
        <div class="header__nav-item__text"> 
            Contact
        </div>
    </a>
  </nav>
</header>

<style>
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 30px 60px;
      color: white;
      position: fixed;
      z-index: 100;
      width: 100%;
	  box-sizing: border-box;
      background: linear-gradient(
      to top,
        #06060900 0%, 
        #060609ff 100%
      );

    }

    .header__logo-container {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .header__logo {
      width: 200px;
    }

    .header__nav {
      display: flex;
      align-items: center;
      gap: 50px;
    }

    .header__nav-item {
      color: rgb(190, 190, 190);
      opacity: 100%;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .header__nav-item:hover {
        color: #fff;
    }

    .header__nav-item--contact {
        padding: 1px 1.5px;
      border-radius: 9999px;
      background: linear-gradient(
      140deg,
        rgba(172, 64, 242, 1) 14%,
        rgba(19, 94, 242, 1) 53%,
        rgba(7, 7, 13, 0.24) 98%
      );
    }

    .header__nav-item__text{
    background: #060609;
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 0.5rem 1rem;
    transition: background-color 0.5s ease
    }

    .header__nav-item--contact:hover .header__nav-item__text{
        background: #06060900;

    }
  </style>