    .hero__content{
        position: relative;
        width: 100%;

        display: grid;
        grid-template-columns: 50% 50%;
    }

    .hero__graphics{
        width: 100%;
        height: 100%;
        position: relative;
    }

    .hero__logo-container{
        width: 350px;
        height: 350px;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
    }

    .hero__logo{
        width: 100%;
    }

    .hero__tag{
        position: absolute;
    }

    .hero__tag__text{
        min-width: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(
            140deg,
            rgba(172, 64, 242, 1) 14%,
            rgba(19, 94, 242, 1) 50%,
            rgba(7, 7, 13, 0.24) 98%
        );
        border-radius: 55555px;
        font-family: "Montserrat";
        font-weight: 10px;
        color: #fff;
        padding: 4px;
    }

    .hero__tag__arrow{
        position: absolute;
        width: 18px;
        height: 18px;


    }

    .hero__tag--1{
        left: calc(50%);
        top: calc(50% - 200px);
    }

    .hero__tag--2{
        left: calc(50% + 160px);
        top: calc(50%);
    }

    .hero__tag--3{
        left: calc(50% - 280px);
        top: calc(50% + 120px);
    }

    .hero__tag--1 > .hero__tag__text{
        background: linear-gradient(
            45deg,
            rgba(172, 64, 242, 1) 14%,
            rgba(19, 94, 242, 1) 50%,
            rgba(7, 7, 13, 0.24) 98%

        );
    }

    .hero__tag--3 > .hero__tag__text{
        background: linear-gradient(
            45deg,
            rgba(7, 7, 13, 0.24) 2%,
            rgba(19, 94, 242, 1) 50%,
            rgba(172, 64, 242, 1) 86%

        );
    }

    .hero__tag--1 > .hero__tag__arrow{
        top: 27px;
        left: -10px;
        transform: rotate(40deg);

    }
    .hero__tag--2 > .hero__tag__arrow{
        top: 5px;
        left: -20px;
        transform: rotate(108deg);
    }

    .hero__tag--3 > .hero__tag__arrow{
        top: -20px;
        right: -10px;
        transform: rotate(108deg);
    }

    .hero__logo--bright-1{
        width: 250px;
        height: 250px;
        background: radial-gradient(rgba(255, 255, 255, 1) 0%,rgba(255, 255, 255, 0.3) 15%, rgba(255, 255, 255, 0) 30%);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(calc(-50% - 50px), calc(-50% - 50px));
    }
    .hero__logo--bright-2{
        width: 250px;
        height: 250px;
        background: radial-gradient(rgba(255, 255, 255, 1) 0%,rgba(255, 255, 255, 0.3) 10%, rgba(255, 255, 255, 0) 20%);
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(calc(-50% - 10px), calc(-50% - 10px));
    }

    .hero__titles{
        padding-left: 80px;
    }

    .hero__title{
        font-family: "Montserrat";
        color: #fff;
        opacity: 70%;
        font-size: 80px;
        font-weight: 500;
        padding-left: 70px;
        margin: 5px 0;
    }

    .hero__subtitle{
        font-family: "Montserrat";
        color: #fff;
        opacity: 70%;
        font-size: 40px;
        font-weight: 400;
        padding-left: 70px;
        margin: 5px 0;

    }

    .hero__code{
        font-family: "Montserrat";
        color: #fff;
        opacity: 70%;
        font-size: 20px;
        font-weight: 10;
        line-height: 30px;
        position: relative;
    }
    .hero__code--1::after{
        position: absolute;
        bottom: 0;
        left: 0;  
        height: 100%;
        width: 100%;
        content: "";
        background: linear-gradient(to top,
        #060609bb 0%, 
        #060609ff 100%
        );
        pointer-events: none; 
    }
    .hero__code--2::after{
        position: absolute;
        bottom: 0;
        left: 0;  
        height: 100%;
        width: 100%;
        content: "";
        background: linear-gradient(to top,
        #06060977 0%, 
        #060609aa 100%
        );
        pointer-events: none; 
    }
    .hero__code--3::after{
        position: absolute;
        bottom: 0;
        left: 0;  
        height: 100%;
        width: 100%;
        content: "";
        background: linear-gradient(to top,
        #060609aa 0%, 
        #06060977 100%
        );
        pointer-events: none; 
    }
    .hero__code--4::after{
        position: absolute;
        bottom: 0;
        left: 0;  
        height: 100%;
        width: 500%;
        content: "";
        background: linear-gradient(to top,
        #060609ff 0%, 
        #060609bb 100%
        );
        pointer-events: none; 
    }

@property --p {
    syntax: '<percentage>';
    inherits: false;
    initial-value: 14%;
}

@property --p2 {
    syntax: '<percentage>';
    inherits: false;
    initial-value: 53%;
}

@property --p3 {
    syntax: '<percentage>';
    inherits: false;
    initial-value: 98%;
}

@property --c {
  syntax: '<color>';
  inherits: false;
  initial-value: rgba(172, 64, 242, 1);
}


.hero__cta{
    --p:14%;
    --p2:53%;
    --p3:98%;
    --c:rgba(172, 64, 242, 1);

    cursor:pointer;
    display: flex;
    margin-left: 70px;
    text-decoration: none;
    color: #fff;
    border-radius: 555px;
    align-items: center;
    justify-content: center;
    padding: 15px 20px;
    margin-top: 10px;
    margin-bottom: 10px;
    font-family: "Montserrat";
    font-size: 20px;
    width: max-content;
    transition:--p 0.5s,--p2 0.5s,--p3 0.5s, --c 0.5s;
    background: linear-gradient(
    140deg,
    var(--c) var(--p),
    rgba(19, 94, 242, 1) var(--p2),
    rgba(7, 7, 13, 0.24) var(--p3)
    );
}

.hero__cta:hover{
    --p:14%;
    --p2:100%;
    --p3:100%;
    --c:rgb(212, 64, 242);


}

@media (max-width: 1100px) {
    .hero__content{
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .hero__code{
        display: none;
    }
    .hero__titles{
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 40px;
        padding: 0;
        padding-top: 120px;
    }
    .hero__title{
        padding: 0;
        padding-bottom: 200px;
        margin: 0;
        text-align: center;
    }
    .hero__subtitle{
        padding: 0;
    }
    .hero__cta{
        margin: 0;
    }
    .hero__tag{
        display: none;
    }
    .hero__background{
        width: 100%;
    }
    .hero__background{
        transform: translateY(90px);
    }
    .hero__graphics{
        display: none;
    }

    @media (max-width: 550px) {
        .hero__title{
            font-size: 40px;
        }
        .hero__subtitle{
            font-size: 20px;
        }
        .hero__cta{
            font-size: 20px;
        }
        .hero__logo-container{
            width: 250px;
            height: 250px;
        }
        .hero__logo--bright-1{
            width: 200px;
            height: 200px;
            left: 52%;
            top: 56%;
        }
        .hero__logo--bright-2{
            width: 200px;
            height: 200px;
            left: 50%;
            top: 52%;
        }

        .hero__titles{
            padding-top: 60px;
        }
        .hero__background{
            transform: translateY(0);
        }

        .pentagon_3{
            display: none  ;
        }
        .pentagon_2{
            display: none  ;
        }
        .pentagon_1{
            display: none  ;
        }
    }
    
}
