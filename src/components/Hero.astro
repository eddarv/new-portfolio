        position: relative;
    }
    .hero__background{
        width: 50%;
        height: 100%;
        position: absolute;
    }
    .pentagon{
        position: absolute;
        width: 150px;
	    height: 150px;
        
        clip-path: polygon(50% 0%, 97.6% 34.4%, 79.6% 90.4%, 20.4% 90.4%, 2.4% 34.4%);
        top: 50%;
        left: 50%;
    }
    .pentagon::after{
        content: " ";
        position: absolute;
        background-color: #060609;
        width: calc(100% - 2px);
        height: calc(100% - 2px);
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        clip-path: polygon(50% 0%, 97.6% 34.4%, 79.6% 90.4%, 20.4% 90.4%, 2.4% 34.4%);
    }
