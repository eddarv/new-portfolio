---
import logo3d from '../assets/logo_3d.png';
import vector from '../assets/Vector2.svg';

---

<section class="hero" id="hero">
    <div class="hero__background">
        <div class="pentagon pentagon_1"></div>
        <div class="pentagon pentagon_2"></div>
        <div class="pentagon pentagon_3"></div>
        <div class="pentagon pentagon_4"></div>
        <div class="pentagon pentagon_5"></div>
        <div class="pentagon pentagon_6"></div>
        <div class="pentagon pentagon_7"></div>
        <div class="pentagon pentagon_8"></div>
        <div class="pentagon pentagon_9"></div>
        <div class="pentagon pentagon_10"></div>
        <div class="pentagon pentagon_11"></div>
        <div class="pentagon pentagon_12"></div>
        <div class="pentagon pentagon_13"></div>
        <div class="pentagon pentagon_14"></div>
        <div class="pentagon pentagon_15"></div>
        <div class="pentagon pentagon_16"></div>
        <div class="pentagon pentagon_17"></div>
        <div class="pentagon pentagon_18"></div>
        <div class="pentagon pentagon_19"></div>
        <div class="pentagon pentagon_20"></div>
        <div class="pentagon pentagon_21"></div>
        <div class="pentagon pentagon_22"></div>
        <div class="pentagon pentagon_23"></div>
        <div class="hero__logo-container">
            <img src={logo3d.src} alt="3d logo" class="hero__logo">
            <div class="hero__logo--bright-1"></div>
            <div class="hero__logo--bright-2"></div>

        </div>
        <div class="hero__tag hero__tag--1">
            <img src={vector.src} class="hero__tag__arrow"/>
            <div class="hero__tag__text">Electronic Engineer</div>
        </div>
        <div class="hero__tag hero__tag--2">
            <img src={vector.src} class="hero__tag__arrow"/>
            <div class="hero__tag__text">Web Designer</div>
        </div>
        <div class="hero__tag hero__tag--3">
            <img src={vector.src} class="hero__tag__arrow"/>
            <div class="hero__tag__text">Full Stack Developer</div>
        </div>
    </div>
    <div class="hero__content">
        <article class="hero__graphics">
            
        </article>
        <article class="hero__titles">
            <code class="hero__code hero__code--1">
                &lt;html&gt;<br>
                &nbsp;&nbsp;&nbsp;&lt;header&gt;<br>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;...<br>
                &nbsp;&nbsp;&nbsp;&lt;header&gt;<br>
                &nbsp;&nbsp;&nbsp;&lt;body&gt;<br>   
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;h1 class=”title”&gt;
            </code>
            <h1 class="hero__title">One <br>Developer</h1>
            <code class="hero__code hero__code--2">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;h1/&gt;<br>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;h2 class="subtitle"&gt;  
            </code>
            <h2 class="hero__subtitle">Is all your web needs</h2>
            <code class="hero__code hero__code--3">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;h2/&gt;<br>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;button class="cta"&gt;<br>   
            </code>
            <a href="#contact" class="hero__cta">Let's work together</a>
            <code class="hero__code hero__code--4">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;button/&gt;<br>
                &nbsp;&nbsp;&nbsp;&lt;body/&gt;<br>
                &nbsp;&nbsp;&nbsp;&lt;footer&gt;<br>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;...<br>
                &nbsp;&nbsp;&nbsp;&lt;footer/&gt;<br> 
                &lt;html/&gt;   
            </code>
        </article>
    </div>
</section>

<style>
    .hero{
